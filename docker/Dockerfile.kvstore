FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    g++ \
    cmake \
    make \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY kvstore /app/kvstore

WORKDIR /app/kvstore
RUN mkdir build && cd build && cmake .. && make && make install

EXPOSE 8080

CMD ["/usr/local/bin/kvstore_server", "8080"]
